<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/checkbox_to_do_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text=""
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:buttonTint="@color/gray_c4c4c4" />

    <TextView
        android:id="@+id/textview_to_do_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/checkbox_to_do_check"
        app:layout_constraintEnd_toStartOf="@id/checkbox_to_do_pin"
        tools:text = "오늘의 할 일1 오늘의 할 일1 오늘의 할 일1 오늘의 할 일1" />

    <CheckBox
        android:id="@+id/checkbox_to_do_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text=""
        android:button="@drawable/check_box_pin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>